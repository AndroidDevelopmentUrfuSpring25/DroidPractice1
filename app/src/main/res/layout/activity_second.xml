<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:navigationIcon="@drawable/arrow_back"
        android:title="@string/article_title" />

    <ScrollView
        android:id="@+id/secondScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/TitleStyle"
                android:text="@string/article_2_title" />

            <TextView
                style="@style/TextStyle"
                android:text="@string/article_2_intro" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:contentDescription="TODO" />

            <TextView
                style="@style/TextStyle"
                android:text="@string/article_2_battlemage" />

            <TextView
                style="@style/TextStyle"
                android:text="@string/article_2_b570" />

            <TextView
                style="@style/TextStyle"
                android:text="@string/article_2_b580" />

            <TextView
                style="@style/TextStyle"
                android:text="@string/article_2_limited" />

            <TextView
                style="@style/TextStyle"
                android:text="@string/article_2_efficiency" />

            <TextView
                style="@style/TextStyle"
                android:text="@string/article_2_conclusion" />

            <Switch
                android:id="@+id/readSwitcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:text="Статья прочитана"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>