<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <!-- Toolbar -->
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:navigationIcon="@drawable/arrow_back"
        android:title="@string/article_title"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mainHeading"
                android:textSize="@dimen/fontTitle"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/article_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/first_picture"
                android:scaleType="centerCrop"
                android:layout_marginBottom="@dimen/picturePadding" />

            <TextView
                android:id="@+id/article_1text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/firstParagraph"
                android:textSize="@dimen/fontText"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/picturePadding"/>

            <TextView
                android:id="@+id/article_2text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/secondParagraph"
                android:textSize="@dimen/fontText"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/article_1image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/second_picture"
                android:scaleType="centerCrop"
                android:layout_marginBottom="@dimen/picturePadding"
                android:layout_marginTop="@dimen/picturePadding"/>

            <TextView
                android:id="@+id/article_3text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/thirdParagraph"
                android:textSize="@dimen/fontText"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/article_4text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fourthParagraph"
                android:textSize="@dimen/fontText"
                android:textColor="@color/black"
                android:paddingBottom="@dimen/textPadding"/>

            <TextView
                android:id="@+id/article_5text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fifthParagraph"
                android:textSize="@dimen/fontText"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/article_6text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sixthParagraph"
                android:textSize="@dimen/fontText"
                android:textColor="@color/black"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
