<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:navigationIcon="@drawable/arrow_back"
        android:navigationContentDescription="@string/returnBack"
        android:title="@string/article2_topbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textColor="@android:color/black">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/article2_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:textColor="@android:color/black"/>

            <ImageView
                android:id="@+id/article_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/article_image"
                android:paddingBottom="16dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/article21"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"
                android:letterSpacing="0.03"
                android:textColor="@android:color/black"/>

            <!-- Второй блок текста -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/article22"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"
                android:letterSpacing="0.03"
                android:textColor="@android:color/black"/>

            <!-- Третий блок текста -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/article23"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"
                android:letterSpacing="0.03"
                android:textColor="@android:color/black"/>

            <Switch
                android:id="@+id/readSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>